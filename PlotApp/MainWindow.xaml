<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PlotApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlotApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    Title="PlotApp">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".25*"/>
        </Grid.RowDefinitions>
        <MenuBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuBarItem Title="Настройки осей">
                <MenuFlyoutItem Text="Название оси X" x:Name="EnterX" Click="EnterX_Click"/>
                <MenuFlyoutItem Text="Название оси Y" x:Name="EnterY" Click="EnterY_Click"/>
            </MenuBarItem>
            <MenuBarItem Title="Легенда" >
                <ToggleMenuFlyoutItem Text="Показать легенду" Click="{x:Bind _viewModel.ToggleLegend}"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Изменить название графика" Click="EnterName_Click" x:Name="EnterName"/>
            </MenuBarItem>
        </MenuBar>
        <controls:DataGrid Grid.Column="0" Grid.Row="1" x:Name="dataGrid" AutoGenerateColumns="True" SelectedIndex="{x:Bind _viewModel.SelInd, Mode=TwoWay}" ItemsSource="{x:Bind _viewModel.Model, Mode=TwoWay}" KeyDown="dataGrid_KeyDown"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Click="{x:Bind _viewModel.AddRow}">
                <SymbolIcon Symbol="Add"/>
            </Button>
            <Button Click="Button_Click">
                <SymbolIcon Symbol="Folder"/>
            </Button>
        </StackPanel>
        <lvc:CartesianChart Grid.Column="1" Grid.Row="1" DrawMarginFrame="{x:Bind _viewModel.Frame}" LegendPosition="{x:Bind _viewModel.LegVisible, Mode=OneWay}" Visibility="{x:Bind _viewModel.PlotVisibility, Mode=OneWay}" Series="{x:Bind _viewModel.Series,Mode=TwoWay}" ZoomMode="Both" XAxes="{x:Bind _viewModel.XAxis, Mode=OneWay}" YAxes="{x:Bind _viewModel.YAxis,Mode=OneWay}"/>
        <TextBlock Text="Заполните данные" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="20" FontWeight="Light" HorizontalAlignment="Center" Visibility="{x:Bind _viewModel.WarningVisibility, Mode=OneWay}"/>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Spacing="7">
            <CheckBox Content="Сглаживание графика" IsChecked="True" Checked="{x:Bind _viewModel.SetSmooth}" Unchecked="{x:Bind _viewModel.UnsetSmooth}"/>
            <Button Content="Цвет графика">
                <Button.Flyout>
                    <Flyout>
                        <ColorPicker
                            IsColorSliderVisible="True"
                            IsHexInputVisible="False"
                            IsColorChannelTextInputVisible="False"
                            ColorChanged="{x:Bind _viewModel.ChangeColor}"/>
                    </Flyout>
                </Button.Flyout>
            </Button>
            
        </StackPanel>
    </Grid>
</Window>
